generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Scan {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  
  title     String?
  rawText   String   // O que o utilizador escreveu
  productUrl String? // <--- NOVO: O Link clicÃ¡vel (pode ser nulo)
  
  fairPrice Float
  listingPrice Float?
  verdict   String
  category  String
  
  componentsJson String
}
